<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
tools:context="com.example.mati.linerlayoutact1.MainActivity"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
android:background="#000000"
android:gravity="top|center">

<RadioGroup
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="top|center"
    android:orientation="horizontal"
    android:background="#000000"
    android:id="@+id/gcolor">
    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Roig"
        android:id="@+id/broig"
        android:checked="true"
        android:layout_gravity="center_horizontal"
        android:textColor="#ec0000" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Blau"
        android:id="@+id/bblau"
        android:checked="false"
        android:layout_gravity="center_horizontal"
        android:textColor="#67acf1" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Verd"
        android:id="@+id/bverd"
        android:checked="false"
        android:textColor="#2fd911" />
</RadioGroup>

<LinearLayout
    android:layout_width="381dp"
    android:layout_height="wrap_content"
    android:gravity="right"
    android:background="#000000">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Añadir color"
        android:id="@+id/bañadir" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Borrar"
        android:id="@+id/bborrar" />

</LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/color"/>
</LinearLayout>

</LinearLayout>